{
	"version": "2.0.0",
	"tasks": [
		{
			/* Remove the intermediates directory obj/ and the output directory bin/. */
			"type": "shell",
			"label": "clean-cpp",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "never", "close": true },

			"command": "make",
			"args": ["clean"],
		},
		{
			"type": "shell",
			"label": "experiment-new",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "never", "close": true },

			"command": "code",
			"args": ["../experiment/${input:new-name}"],
		},
		{
			/* Build the open file in debug mode. */
			"type": "shell",
			"label": "build-debug-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "never" },
			"group": { "kind": "build", "isDefault": true },

			"command": "make",
			"args": [
				"PROJECT=${relativeFileDirname}",
				"SOURCES=${fileBasename}",
				"BIN=${fileBasenameNoExtension}"
			],
			"problemMatcher": ["$gcc"],
			"windows": { "problemMatcher": ["$msCompile"] }
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "build-release-x64",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "never" },
			"group": "build",

			"command": "make",
			"args": [
				"PROJECT=${relativeFileDirname}",
				"SOURCES=${fileBasename}",
				"BIN=${fileBasenameNoExtension}",
				"BUILD=1"
			],
			"problemMatcher": ["$gcc"],
			"windows": { "problemMatcher": ["$msCompile"] }
		}
	],
	"inputs": [
		{
			"id": "new-name",
			"description": "Name:",
			"default": "",
			"type": "promptString"
		}
	]
}
